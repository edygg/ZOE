@model IEnumerable<Zoe.Models.Patient>

@{
    ViewBag.Title = "Listado de pacientes";
}

<div class="col-md-10 col-md-offset-1">
    <h2>Listado de pacientes</h2>
    <br />
    <div class="row" style="padding-left:15px" >
        @Html.ActionLink("Agregar nuevo paciente", "Create", "Patient", new { @class = "btn btn-success" })
    </div>
    <br /><br />
    <table class="table table-hover">
        <tr>
            <th>
                No. Expediente
            </th>
            <th>
                Nombre completo
            </th>
            <th>
                Lugar de procedencia
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NoExpediente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres) @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ciudad), @Html.DisplayFor(modelItem => item.Departamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    </div>
                </td>
            </tr>
        }

    </table>
</div>

