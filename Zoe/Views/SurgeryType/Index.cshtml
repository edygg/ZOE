@model IEnumerable<Zoe.Models.SurgeryType>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-10 col-md-offset-1">
    <h2>Lista de tipos de cirugía</h2>
    <br />
    <div class="row" style="padding-left:15px">
        @Html.ActionLink("Agregar nuevo tipo de cirigía", "Create", "SurgeryType", new { @class = "btn btn-success" })
    </div>
    <br />
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>Duración</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horas) horas y @Html.DisplayFor(modelItem => item.Minutos) minutos
                </td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    </div>
                </td>
            </tr>
        }

    </table>
</div>
